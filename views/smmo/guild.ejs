<%- include('guild/style') %>

<h3 class="nav">
  <a href="/">Home</a>
  |
  <%= title %>
  &middot;
  SimpleMMO
  &middot;
  Guild
</h3>
<hr/>

<h2 id="header">
  <div class="wrapper">
    <img src="<%- guild.img %>"/>
    <span><%- guild.title %></span>
    [<small class="number"><%- guild.count %></small>]
  </div>
  <div class="loading" style="display: none">
    <i class="fa fa-refresh fa-spin fa-2x fa-fw"></i>
    <span class="sr-only">Loading...</span>
  </div>
</h2>

<div id="menu">
  <button id="menuFetch">Fetch Data</button>
  &nbsp;
  <button onclick="localStorage.clear()">Clear Local Storage</button>
</div>
<br/>


<div id="tableContent">
  <div id="tableMenu">
    <input
      id="inputPerPage"
      type="number"
      value="10"
      style="width: 40px"
    />
    <button id="tableMenuShowPerPage">
      /page
    </button>
    <br/>
    <br/>
  </div>

  <div id="tablePagination" style="display: none;">
    <button id="pageFirst">&lt;&lt;</button>
    <button id="pagePrevious">&lt;</button>
    &nbsp;
    <span class="current">1</span>/<span class="total">1</span>
    &nbsp;
    <button id="pageNext">&gt;</button>
    <button id="pageLast">&gt;&gt;</button>
    <br/>
    <br/>
  </div>
  <div id="info" style="display: none"></div>
  <div class="wrapper" style="display: none">
    <table border=1>
      <thead>
        <tr>
          <th>#</th>
          <th id="sortName" class="sortToggle">
            <a href="javascript:;">name</a>
          </th>
          <th id="sortLevel" class="sortToggle">
            <a href="javascript:;">level</a>
          </th>
          <th id="sortUpdate" class="sortToggle">
            <a href="javascript:;">update</a>
          </th>
        </tr>
      </thead>
      <tbody id="table"></tbody>
    </table>
  </div>
  <div class="loading">
    <i class="fa fa-refresh fa-spin fa-2x fa-fw"></i>
    <span class="sr-only">Loading...</span>
  </div>
</div>

<div style="display: none">
  <table>
    <tr id="tplTR">
      <td class="pos number"></td>
      <td class="name"></td>
      <td class="level number"></td>
      <td class="update number"></td>
    </tr>
  </table>
</div>

<%- include('guild/script') %>

