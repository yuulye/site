<h3>
  <a href="/">Home</a>
  |
  <%= title %>
  &middot;
  Currency Converter
</h3>

<style> <%- include(
'currency-converter/style.css'
) %></style>

<div class="main">

  <input
    id="input"
    type="numeric"
    inputmode="numeric"
    placeholder="0"
    value="<%- 1 %>"
  />
  <br/>
  <br/>
  <br/>

  <div class="input-wrapper">
    <img
      class="flag"
      src="https://www.countryflags.io/<%-
        'FR'
      %>/shiny/32.png"
      data-id="<%- 'FR' %>"
    />
    <input
      class="input"
      placeholder="0.00"
      inputmode="numeric"
      value="<%- countries.find(o => o.code === 'FR').rate %>"
      disabled
    />
    <select id="from" class="country">
      <%
        for (let i = 0; i < countries.length; i++) {
        const o = countries[i];
        const code = o.code;
        const name = o.name;
      %>
        <option
          value="<%- code %>"
          <%- code === 'FR' ? 'selected' : '' %>
        ><%- name %></option>
      <% } %>
    </select>
  </div>

  <div style="background: white;padding: 8px;"></div>

  <div class="input-wrapper">
    <img
      class="flag"
      src="https://www.countryflags.io/<%-
        'US'
      %>/shiny/32.png"
      data-id="<%- 'US' %>"
    />
    <input
      class="input"
      placeholder="0.00"
      inputmode="numeric"
      value="<%- countries.find(o => o.code === 'US').rate %>"
      disabled
    />
    <select id="to" class="country">
      <%
        for (let i = 0; i < countries.length; i++) {
        const o = countries[i];
        const code = o.code;
        const name = o.name;
      %>
        <option
          value="<%- code %>"
          <%- code === 'US' ? 'selected' : '' %>
        ><%- name %></option>
      <% } %>
    </select>
  </div>

  <div style="
    position: relative;
    top: -78px;
    background: white;
    padding: 18px;
  "></div>
